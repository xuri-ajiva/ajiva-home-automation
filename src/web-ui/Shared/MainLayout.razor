@inherits LayoutComponentBase

<PageTitle>web-ui</PageTitle>
<Layout Class="page">
    <Sider Collapsible Collapsed="_collapsed">
        <div class="logo" style="height: 32px; margin: 16px; width: 200px; font-size: 1.3em;">Ajiva Home Automation</div>
        <Menu Mode="MenuMode.Inline">
            <MenuItem RouterMatch="NavLinkMatch.All" RouterLink="/">
                <Icon Type="home" Theme="outline"/>
                <span>Index</span>
            </MenuItem>           
            <MenuItem RouterLink="/home">
                <Icon Type="home" Theme="outline"/>
                <span>Home</span>
            </MenuItem>
            <MenuItem RouterLink="/Devices">
                <Icon Type="video-camera" Theme="outline"/>
                <span>Devices</span>
            </MenuItem>
        </Menu>
    </Sider>

    <Layout Class="site-layout" Style="height: 100vh">
        <Header>
            <div style="gap: 2em; justify-content: flex-end; display: flex;align-items: center;">
                <LoginDisplay/>
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            </div>
        </Header>
        <Content Style="scroll-behavior: smooth; overflow-y: scroll; scrollbar-width: thin;">
            <article style="margin:16px;">
                @Body
            </article>
        </Content>
        <Footer Style="text-align:center ">Ajiva Home Ahtomation ©2022 Created by Xuri Ajiva</Footer>
    </Layout>
</Layout>

@code
{
    bool _collapsed = false;
}
